@model UserUpdaeViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgilerini Güncelleme</h4>
            <br />

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adınız</label>
                    <input type="text" class="form-control" asp-for="@Model.userName" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email adresiniz</label>
                    <input type="text" class="form-control" asp-for="@Model.mail" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifreniz</label>
                    <input type="text" class="form-control" asp-for="@Model.password" required>
                </div>
                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="img" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" asp-for="@Model.ImageUrl" class="form-control  file-upload-info" disabled placeholder="Resim Yükle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Güncelle</button>
                        </span>
                    </div>
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button  class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Yeni Kategori Girişi</h1>

@using (Html.BeginRouteForm(
   routeName: "Admin",
   routeValues: new { action = "AddCategory", controller = "Category", area = "Admin" },
   method: FormMethod.Post))
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br />
   
    <br />
   
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.CategoryDescriptiron, 15, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryDescriptiron)
    <br />
    <button class="btn btn-info">Kaydet</button>

}

